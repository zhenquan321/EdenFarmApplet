}

.goods-info .goods_price .price-spec .span {
    font-size: 18px;
}

.goods-info .goods_price .grey {
    color: #878787;
    font-size: 12px;
}

.goods-info .goods_price .grey-padding, .goods-info .goods_price .red-padding {
    padding-left: 1px;
}

.goods-info .goods_price .market-price {
    color: #878787;
    font-size: 10px;
}

.goods-info .goods-sold {
    color: #878787;
    font-size: 12px;
    text-align: left;
}

.rule-intro {
    color: #878787;
    font-size: 12px;
    margin:0 -20px;
}

.goods-info .goods-sold {
    margin-top: 6px;
    margin-bottom: 9px;
    height: 14px;
    line-height: 14px;
}

.rule-intro {
    background-color: #eceded;
    padding: 10rpx 0;
    line-height: 15px;
}

.nearby-group {
    width: 100%;
    max-width: 640px;
    padding-bottom: 5px;
    border-top: 1px solid #dcdcdc;
    clear: both;
    background: #fff;
}

.input{
  display: flex;
  background:#fff;
  justify-content: center;
  flex-direction: column;
  padding: 0 20rpx;
}

.line{
  display: flex;
  justify-content: flex-start;
  padding:20rpx 10rpx;
  border-bottom: 2rpx solid #ccc;
}

.line-labe{
  width:150rpx;
  font-size: 30rpx;
}
.theinput{
  padding:0rpx 20rpx;

}

.nearby-group .nearby-title {
    height: 40px;
    margin: 0 12px;
    padding: 10px 0;
    line-height: 20px;
    font-size: 14px;
    color: #626262;
    border-bottom: 1px solid #ddd;
}

.nearby-group .nearby-group-detail {
    position: relative;
    height: 50px;
    margin-bottom: 10px;
    padding-top: 10px;
