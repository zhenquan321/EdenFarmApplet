.date-select {
  background: #fff;
  position: relative;
  text-align: center;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}

.date-select:active {
  background: rgba(0, 0, 0, 0.05);
}

.stay-date {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 14px;
  padding: 2px 10px;
  background: #fff;
  border-radius: 500rpx;
}

.stay-start, .stay-end {
  padding: 20rpx 40rpx 20rpx 40rpx;
}