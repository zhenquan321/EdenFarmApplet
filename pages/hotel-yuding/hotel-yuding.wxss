    overflow: hidden;
    font-size: 15px;
    font-weight: 700;
    text-align: left;
    line-height: 40px;
    white-space: nowrap;
}

.nearby-group .nearby-group-detail .nearby-g-wrapper .nearby-g-info .nearby-g-left-user-num {
    display: inline-block;
    width: 38%;
    height: 20px;
    margin-right: 2%;
    float: right;
    line-height: 20px;
    font-size: 11px;
    text-align: right;
    color: #f95757;
}

.nearby-group .nearby-group-detail .nearby-g-wrapper .nearby-g-info .nearby-g-address {
    display: inline-block;
    width: 20%;
    max-width: 20%;
    margin-left: 20px;
    float: left;
    overflow: hidden;
    font-size: 11px;
    text-align: left;
    line-height: 20px;
    white-space: nowrap;
}

.nearby-group .nearby-group-detail .nearby-g-wrapper .nearby-g-info .nearby-g-left-time {
    display: inline-block;
    width: 38%;
    height: 20px;
    margin-right: 2%;
    float: right;
    font-size: 11px;
    text-align: right;
    line-height: 20px;
    color: #666;
}

