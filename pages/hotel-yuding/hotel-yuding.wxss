.container {
    position: relative;
    width: 100%;
    max-width: 640px;
    min-height: 100%;
    margin: 0 auto;
    padding: 0 0 56px;
    overflow-x: hidden;
    background-color: #eceded;
    display: block;
}

.goods-info {
    position: relative;
    padding: 10px 20px;
    text-align: left;
}
.biaoqian{
  border:1px solid #ccc;
  padding:1px 7px!important;
  border-radius:10px;
  font-size:10px;
  margin-right:6px!important;

}
.active{
  border-color:#ff6850;
  color: #ff6850!important;
}

.goods-white {
    background-color: #fff;
}

.goods-info .goods-name {
    padding:5px 0px;
    font-size:18px;
    height:auto;
    color:#343434;
    line-height:22px;
    text-align:left;
    font-weight:600;
}

.goods-info .tuan_goods_cx {
    padding: 6px 0 4px;
    line-height: 15px;
    font-size: 13px;
}

.goods-info .tuan_goods_cx .span {
    padding-right: 4px;
    margin: 0;
    padding: 0;
    vertical-align: baseline;
    color: #666;
}
.goods-info .goods-pingfen{
  float: right;
  color: rgb(216, 133, 25)!important;
  font-size: 14px;
}
.goods-info .goods_price {
    height: 25px;
    line-height: 25px;
    text-align: left;
    margin-top: 4px;
}

.goods-info .goods_price .red {
    color: #1AAD19;
    font-size: 24px;
}

.goods-info .goods_price .red .span {
    font-size: 14px;
    padding-right: 1px;
}

.goods-info .goods_price .grey-padding, .goods-info .goods_price .red-padding {
    padding-left: 1px;
}

.goods-info .goods_price .price-spec {
    color: #626262;
